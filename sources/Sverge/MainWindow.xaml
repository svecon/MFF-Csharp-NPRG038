<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Sverge"
    xmlns:p="clr-namespace:Sverge.Properties"
    x:Class="Sverge.MainWindow"
    Title="{x:Static p:Resources.App_Title}">

    <Window.CommandBindings>
        <CommandBinding Command="New" Executed="NewCommand_Executed" />
        <CommandBinding Command="local:MainWindow.CloseWindow" CanExecute="CloseCommand_CanExecute" Executed="CloseCommand_Executed" />
        <CommandBinding Command="local:MainWindow.Exit" Executed="ExitCommand_Executed" />
        <CommandBinding Command="local:MainWindow.ProcessorSettings" Executed="ProcessorSettings_Executed" />
    </Window.CommandBindings>

    <Window.Resources>
        <Style TargetType="Menu">
            <Setter Property="BorderBrush" Value="LightGray" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>
        <Style TargetType="MenuItem" x:Key="WindowMenuItemStyle">
            <Setter Property="Background" Value="LightGreen" />
            <Setter Property="BorderBrush" Value="LightGreen" />
        </Style>
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border 
                                Name="Border"
                                Margin="10,0,0,0"
                                BorderBrush="SlateGray"
                                BorderThickness="1,1,1,0"
                                SnapsToDevicePixels="True">

                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="LightGray" Offset="0" />
                                        <GradientStop Color="#00ffffff" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <DockPanel>
                                    <Image DockPanel.Dock="Right"
                                        Source="Resources/close.png" MouseUp="TabCloseImage_OnMouseUp"
                                           Height="10"
                                           Width="10"
                                           Margin="0,0,6,0">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Cursor" Value="Hand" />
                                                        <Setter Property="RenderTransform">
                                                            <Setter.Value>
                                                                <ScaleTransform ScaleX="1.5" ScaleY="1.5" CenterX="5" CenterY="5" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>

                                    <ContentPresenter 
                                        x:Name="ContentSite"
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="12,2,6,2"
                                        RecognizesAccessKey="True">
                                    </ContentPresenter>
                                </DockPanel>

                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Panel.ZIndex" Value="100" />
                                <Setter TargetName="Border" Property="Background" Value="LightGreen" />
                                <Setter TargetName="Border" Property="CornerRadius" Value="10,10,0,0" />
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0" />
                                <!--<Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1" CenterY="25" CenterX="75" />
                                    </Setter.Value>
                                </Setter>-->
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="DarkRed" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="Black" />
                                <Setter Property="Foreground" Value="DarkGray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>

        <Menu DockPanel.Dock="Top" x:Name="Menu">
            <Menu.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="Padding" Value="16,3,16,3" />
                </Style>
            </Menu.Resources>

            <MenuItem Header="File">
                <MenuItem Header="{x:Static p:Resources.Menu_NewComparison}" Command="New" />
                <MenuItem Header="{x:Static p:Resources.Menu_CloseComparison}" Command="local:MainWindow.CloseWindow" />

                <Separator />

                <MenuItem Header="{x:Static p:Resources.Menu_Processors}" Command="local:MainWindow.ProcessorSettings" />

                <Separator />

                <MenuItem Header="{x:Static p:Resources.Menu_About}" />

                <MenuItem Header="{x:Static p:Resources.Menu_Exit}" Command="local:MainWindow.Exit" />
            </MenuItem>
        </Menu>

        
        <!--TODO: add statusbar to GUI-->
        <!--<StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="" />
            </StatusBarItem>
        </StatusBar>-->

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TabControl x:Name="Tabs"
                        Grid.Row="1"
                        TabStripPlacement="Top"
                        VerticalAlignment="Top"
                        BorderThickness="0,1,0,0"
                        SelectionChanged="Tabs_OnSelectionChanged"/>
        </Grid>

    </DockPanel>
</Window>
