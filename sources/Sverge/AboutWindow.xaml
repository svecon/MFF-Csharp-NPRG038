<Window x:Class="Sverge.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:Sverge.Properties"
        Title="{x:Static p:Resources.About_Title}"
        Height="300" Width="500">
    
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Sverge v1.0.0" Margin="10,10,0,0" FontSize="32" />
        <TextBlock Text="Ondřej Švec" Margin="10,10,0,0" FontSize="16" />
        <TextBlock Text="sverge@svecon.cz" Margin="10,0,0,0" FontSize="16" />
        <TextBlock Text="{x:Static p:Resources.About_MoreInfo}" Margin="10,20,0,0" FontSize="16" TextWrapping="Wrap" />
        <TextBlock Margin="10,0,0,0" FontSize="16" TextWrapping="Wrap">
            <Hyperlink NavigateUri="https://github.com/svecon/Sverge" RequestNavigate="Hyperlink_RequestNavigate">
                https://github.com/svecon/Sverge
            </Hyperlink>
        </TextBlock>

    </StackPanel>
</Window>
